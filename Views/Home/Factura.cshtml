@model List<Factura>

@{
    Layout = "_Layout";
}

@Html.Raw(TempData["SweetAlertScript"])

<div class="my-5 migajas">
    <div class="container ">
        <div class="my-5 align-items-center">
            <div class="py-5">
                <p>Inicio / <span>Mis Compras</span></p>
                <h1>Mis Compras</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">

    @if (Model == null || !Model.Any())
    {
        <div class="text-center" >
            No has realizado compras aún.
        </div>
    }
    else
    {
        <div>
            <table id="table_id" class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th class="text-center">Identificador</th>
                        <th>Fecha de Compra</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var factura in Model)
                    {
                        <tr>
                            <td class="text-center">@factura.FacturaId</td>
                            <td>@factura.FechaCreacion.ToString("dd-MM-yyyy")</td>
                            <td>₡@factura.MontoTotal</td>
                            <td>
                                <a href="@Url.Action("VerFactura", new{facturaId = factura.FacturaId})" class="btn btn-ver">
                                    <i class="fas fa-eye"></i>Ver
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    }
</div>
