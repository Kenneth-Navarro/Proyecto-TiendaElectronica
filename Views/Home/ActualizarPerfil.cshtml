@model Proyecto_TiendaElectronica.ViewModels.UpdateUserPerfil;

@{
    Layout = "_Layout";
}

@Html.Raw(TempData["SweetAlertScript"])

<div class="my-5 migajas">
    <div class="container ">
        <div class="my-5 align-items-center">
            <div class="py-5">
                <p>Inicio / Mi Perfil / <span>Editar Información</span></p>
                <h1>Mi Perfil</h1>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="d-flex justify-content-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
        </svg>

    </div>

    <form asp-action="ActualizarPerfil" method="post">
        <input type="hidden" asp-for="UsuarioId"/>
        <div class="mb-3">
            <div class="input_container">
                <label class="input_label" asp-for="Correo"></label>
                <i class="fa-solid fa-users icon"></i>
                <input type="email" class="input_field" asp-for="Correo">
            </div>
        </div>
        <div class="mb-3">
            <div class="input_container">
                <label class="input_label" asp-for="Telefono"></label>
                <i class="fa-solid fa-users icon"></i>
                <input type="number" class="input_field" asp-for="Telefono">
            </div>
        </div>
        <a href="@Url.Action("Perfil")" class="btn boton-secundario mt-3">
            <span class="shadow-volver"></span>
            <span class="edge-volver"></span>
            <span class="front-volver text">
                Volver
            </span>
        </a>
        <button type="submit" class="btn boton-logueo mt-3">
            <span class="shadow-logueo"></span>
            <span class="edge-logueo"></span>
            <span class="front-logueo text">
                Actualizar
            </span>
        </button>

    </form>


</div>
