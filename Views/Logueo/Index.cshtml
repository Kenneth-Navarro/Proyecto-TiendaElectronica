@model Proyecto_TiendaElectronica.ViewModels.UserLogin;

@{
    Layout = "_LayoutLogin";
}


@Html.Raw(TempData["SweetAlertScript"])

<a href="@Url.Action("Index", "Home")" class="arrow">
    <div class="arrow-box">
        <span class="arrow-elem">
            <svg viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
                <path d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"></path>
            </svg>
        </span>
        <span class="arrow-elem">
            <svg viewBox="0 0 46 40">
                <path d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"></path>
            </svg>
        </span>
    </div>
</a>

<div class="text-center">
    <div class="col">

        <div class="row">
            <h1>NavaTech</h1>
        </div>
        <div class="row">
            <span>Inicio de Sesión</span>
        </div>
    </div>
</div>

<div class="login-element">
    <form asp-action="Index" method="post">

        <div class="row mb-3">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="input_container">
                    <label class="input_label" asp-for="UserName">Nombre de Usuario</label>
                    <i class="fa-solid fa-user icon"></i>
                    <input placeholder="Usuario" type="text" class="input_field" asp-for="UserName" autocomplete="off">
                </div>
                <div class="text-center text-break">
                    <span class="error-form" asp-validation-for="UserName"></span>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="input_container">
                    <label class="input_label" asp-for="Password">Contraseña</label>
                    <i class="fa-solid fa-lock icon"></i>
                    <input placeholder="Contraseña" type="password" class="input_field" asp-for="Password" autocomplete="off">
                </div>
                <div class="text-center text-break">
                    <span class="error-form" asp-validation-for="Password"></span>
                </div>
            </div>

            <div class="d-flex justify-content-between mt-2">
                <div>
                    <div class="checkbox-wrapper">
                        <input id="terms-checkbox-37" asp-for="RememberMe" type="checkbox">
                        <label class="terms-label" for="terms-checkbox-37">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 200 200" class="checkbox-svg">
                                <mask fill="white" id="path-1-inside-1_476_5-37">
                                    <rect height="200" width="200"></rect>
                                </mask>
                                <rect mask="url(#path-1-inside-1_476_5-37)" stroke-width="40" class="checkbox-box" height="200" width="200"></rect>
                                <path stroke-width="15" d="M52 111.018L76.9867 136L149 64" class="checkbox-tick"></path>
                            </svg>
                            <span class="label-text">Recordarme?</span>
                        </label>
                    </div>

                </div>
                <div>
                    <a href="@Url.Action("Registro")" class="register">Registrarse</a>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn boton-logueo">
                <span class="shadow-logueo"></span>
                <span class="edge-logueo"></span>
                <span class="front-logueo text">
                    Iniciar Sesión
                </span>
            </button>
        </div>


    </form>
</div>
        
@section scripts {
    <partial name="_validationscriptspartial" />
}
