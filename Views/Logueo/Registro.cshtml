@model Proyecto_TiendaElectronica.ViewModels.UserRegister;

@{
    Layout = "_LayoutLogin";
}

@Html.Raw(TempData["SweetAlertScript"])

<a href="@Url.Action("Index")" class="arrow">
    <div class="arrow-box">
        <span class="arrow-elem">
            <svg viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg">
                <path d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"></path>
            </svg>
        </span>
        <span class="arrow-elem">
            <svg viewBox="0 0 46 40">
                <path d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z"></path>
            </svg>
        </span>
    </div>
</a>

<div class="text-center">
    <div class="col">

        <div class="row">
            <h1>NavaTech</h1>
        </div>
        <div class="row">
            <span>Registro de Usuario</span>
        </div>
    </div>
</div>

<div class="container-fluid ">
    <form asp-action="Registro" method="post">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                <div class="input_container">
                    <label class="input_label" asp-for="UsuarioId">Cédula</label>
                    <i class="fa-solid fa-id-card icon"></i>
                    <input placeholder="123456789" type="number" class="input_field" asp-for="UsuarioId">
                </div>
                <div class="text-center text-break">
                    <span class="error-form" asp-validation-for="UsuarioId"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                <div class="input_container">
                    <label class="input_label" asp-for="Nombre">Nombre de Usuario</label>
                    <i class="fa-solid fa-user icon"></i>
                    <input placeholder="Usuario" type="text" class="input_field" asp-for="Nombre" autocomplete="off">
                </div>
                <div class="text-center">
                    <span class="error-form" asp-validation-for="Nombre"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                <div class="input_container">
                    <label class="input_label" asp-for="Correo"></label>
                    <i class="fa-solid fa-envelope icon"></i>
                    <input placeholder="usuario@gmail.com" type="text" class="input_field" asp-for="Correo">
                </div>
                <div class="text-center text-break">
                    <span class="error-form" asp-validation-for="Correo"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                <div class="input_container">
                    <label class="input_label" asp-for="Telefono">Teléfono</label>
                    <i class="fa-solid fa-phone icon"></i>
                    <input placeholder="85969696" type="text" class="input_field" asp-for="Telefono">
                </div>
                <div class="text-center text-break">
                    <span class="error-form" asp-validation-for="Telefono"></span>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-lg-12 col-md-12 col-sm-12 mb-3">
                <div class="input_container">
                    <label class="input_label" asp-for="Contrasena">Contraseña</label>
                    <i class="fa-solid fa-lock icon"></i>
                    <input placeholder="contraseña1234" type="password" class="input_field" asp-for="Contrasena" autocomplete="off">
                </div>
                <div class="text-center text-break">
                    <span class="error-form" asp-validation-for="Contrasena"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="input_container">
                    <label class="input_label" asp-for="ConfirmarContrasena">Confirmar Contraseña</label>
                    <i class="fa-solid fa-lock icon"></i>
                    <input placeholder="contraseña1234" type="password" class="input_field" asp-for="ConfirmarContrasena" autocomplete="off">
                </div>
                <div class="text-center text-break">
                    <span class="error-form" asp-validation-for="ConfirmarContrasena"></span>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn boton-logueo">
                <span class="shadow-logueo"></span>
                <span class="edge-logueo"></span>
                <span class="front-logueo text">
                    Registrarse
                </span>
            </button>
        </div>


    </form>
</div>

@section scripts {
    <partial name="_validationscriptspartial" />
}